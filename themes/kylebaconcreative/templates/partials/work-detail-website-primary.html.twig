<section class="work-detail-website-primary">
    <div class="work-detail-website-primary-hero">
        <img class="work-detail-website-primary-hero" src="{{ page.media[ph.workdetailwebsiteprimaryhero].url }}" alt="{{ ph.workdetailwebsiteprimaryheroalt }}" />
    </div>

    <div class="grid flex-grid--gutters">
        <div class="col col--width__four">
            <a href="{{ ph.workdetailwebsiteprimaryurl }}" target="_blank">
                <img class="work-detail-website-primary-main-image" src="{{ page.media[ph.workdetailwebsiteprimarycontentmainimage].url }}" alt="{{ ph.workdetailwebsiteprimarycontentmainimagealt }}" />
            </a>
        </div>
        <div class="col col--width__eight container content">
            <h4>{{ph.workdetailwebsiteprimaryheading}}</h4>
            <p>{{ph.workdetailwebsiteprimarycontent}}</p>
            {% if ph.workdetailwebsiteprimarybutton %}
                <a class="button-link" href="{{ ph.workdetailwebsiteprimaryurl }}"><button class="dark-btn" type="button">{{ ph.workdetailwebsiteprimarybutton }}</button></a>
            {% endif %}
        </div>
    </div>
</section>
